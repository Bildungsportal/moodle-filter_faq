{{#type_collapsiblelonglong}}
    {{#longtitle}}
        <details>
            <summary class="btn btn-link btn-block" style="text-align: left;">
                <i class="fa-regular fa-circle-question"></i>
                {{{longtitle}}}
            </summary>
            {{{longdescription}}}
        </details>
    {{/longtitle}}
{{/type_collapsiblelonglong}}

{{#type_collapsiblelongshort}}
    {{#longtitle}}
        <details>
            <summary class="btn btn-link btn-block" style="text-align: left;">
                <i class="fa-regular fa-circle-question"></i>
                {{{longtitle}}}
            </summary>
            {{^morehelpshown}}
                <div class="flex-container">
                    {{{shortdescription}}}
                    <a href="{{{urlprimary}}}" class="btn btn-link morehelp-btn" target="_blank">
                        <i class="fa-solid fa-up-right-from-square"></i>
                        {{#str}} more_help, filter_faq {{/str}}
                    </a>
                </div>
            {{/morehelpshown}}
            {{#morehelpshown}}
                {{{shortdescription}}}
            {{/morehelpshown}}
        </details>
    {{/longtitle}}
{{/type_collapsiblelongshort}}

